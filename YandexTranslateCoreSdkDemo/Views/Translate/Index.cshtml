@model YandexTranslateCoreSdkDemo.Models.TranslateViewModel
@{
    ViewData["Title"] = "Index";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>YandexTranslateCoreSdk Demo</legend>
        <div class="form-group">
            @Html.LabelFor(model => model.Key, new { style = "display: inline-block; width: 150px;" })
            @Html.TextBoxFor(model => model.Key, new { style = "width:500px" })
            @Html.ValidationMessageFor(model => model.Key, null, new { @class = "text-danger" })
        </div>
        <br />
        <div class="form-group">
            @Html.LabelFor(model => model.InputText, new { style = "display: inline-block; width: 150px;" })
            @Html.TextAreaFor(model => model.InputText, new { style = "width:500px" })
            @Html.ValidationMessageFor(model => model.InputText, null, new { @class = "text-danger" })
        </div>
        <br />
        <div class="form-group">
            @Html.LabelFor(model => model.OutputLanguage, new { style = "display: inline-block; width: 150px;" })
            @Html.DropDownListFor(model => model.OutputLanguage, new SelectList(Model.Languages, "Key", "Value"))
            @Html.ValidationMessageFor(model => model.OutputLanguage, null, new { @class = "text-danger" })
            <input type="submit" value="Load Languages" formaction= @Url.Action("GetLanguages", "Translate") class="btn btn-default" />
        </div>
        <br />        
        <div class="form-group">
            <input type="submit" value="Translate" formaction= @Url.Action("Translate", "Translate") class="btn btn-default" />
        </div>
        <br />
        <br />
        <div class="form-group">
            @Html.LabelFor(model => model.OutputText, new { style = "display: inline-block; width: 150px;" })
            @Html.TextAreaFor(model => model.OutputText, new { style = "width:500px" })
            @Html.ValidationMessageFor(model => model.OutputText, null, new { @class = "text-danger" })
        </div>
        <br />
    </fieldset>
}

